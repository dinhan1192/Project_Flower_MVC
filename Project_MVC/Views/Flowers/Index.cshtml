@model IEnumerable<Project_MVC.Models.Flower>
@using Project_MVC.Models

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var thisPage = ViewBag.Page as ThisPage;
    //var functionType = Constant.CreateProduct;
    var url = "/Flowers/Delete/";
    //var urlPopup = "/Flowers/CreatePopup";

    string ids = "";
    var thisType = "AtView";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
@using (Html.BeginForm("Index", "Flowers", FormMethod.Get))
{
    <p>
        Find by Flower Name or Code: @Html.TextBox("SearchString", ViewBag.CurrentFilter as string, new { @class = "form-control" })
        <input type="submit" value="Search" />
    </p>
}
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Category.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Code)
        </th>
        <th>
            @Html.ActionLink("Flower Name", "Index", new { sortOrder = ViewBag.NameSortParm })
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Price)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Discount)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Rating)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Description)
        </th>
        <th>
            @Html.ActionLink("Date of Update", "Index", new { sortOrder = ViewBag.DateSortParm })
        </th>
        <th>
            Flower Images
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Category.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Code)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @string.Format("{0:C0}", item.Price)
                @*@Html.DisplayFor(modelItem => item.Price)*@
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Discount)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Rating)
            </td>
            <td>
                @Html.Raw(item.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.UpdatedAt)
            </td>
            <td>
                @foreach (var image in item.FlowerImages)
                {
                    <img src="@image.ImageUrl" width="80" height="80" />
                }
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.Code }) |
                @Html.ActionLink("Details", "Details", new { id = item.Code }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.Code },
                     new { @class = "btn btn-danger btn-delete-notify", @id = "delete-" + item.Code, data_request_url = @url })
            </td>
        </tr>
    }

</table>

@Html.Partial("_Paginate", thisPage)


@Html.AntiForgeryToken()
@section scripts{
    @Scripts.Render("~/bundles/custom");
}
